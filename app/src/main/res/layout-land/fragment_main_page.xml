<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:weightSum="100">
<LinearLayout
    android:layout_width="0px"
    android:layout_height="fill_parent"
    android:layout_weight="50"
    android:weightSum="60"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/amfamlogo"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="20"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/amfam_logo"
        android:src="@drawable/oneamfamlogo"
        android:icon="@drawable/amfam3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/meet_the_interns"
        android:id="@+id/meetInternsButton"
        android:layout_gravity="center_horizontal" />

    <!--<ExpandableListView-->
        <!--android:id="@+id/expandable_intern_list"-->
        <!--android:layout_weight="40"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="0px" >-->
    <!--</ExpandableListView>-->

</LinearLayout>
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="50">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_agent"
                android:id="@+id/clientsButton"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/find_an_agent"
                android:id="@+id/claimsButton"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_policies"
                android:id="@+id/scheduleButton"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_claims"
                android:id="@+id/settingsButton"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:id="@+id/myUploadsButton"
                android:layout_gravity="center_horizontal" />



        </LinearLayout>

    </ScrollView>
    </LinearLayout>

</LinearLayout>