<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    style="@style/base_clouds"
    tools:context="com.example.jaz020.oneamfamoffice.EditAppointment">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:background="@color/cloudy_white"
                android:id="@+id/meeting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/meeting_title"
                />

            <EditText
                android:background="@color/cloudy_white"
                android:id="@+id/meeting_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:inputType="text" />

            <TextView
                android:background="@color/cloudy_white"
                android:layout_marginTop="10dp"
                android:id="@+id/attendees_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/attendees_title" />

            <EditText
                android:background="@color/cloudy_white"
                android:id="@+id/attendees_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textMultiLine" />

            <TextView
                android:background="@color/cloudy_white"
                android:layout_marginTop="10dp"
                android:id="@+id/location_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_title" />

            <EditText
                android:background="@color/cloudy_white"
                android:id="@+id/location_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <TextView
                android:layout_marginTop="10dp"
                android:background="@color/cloudy_white"
                android:id="@+id/comments_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/comments_title" />

            <EditText
                android:background="@color/cloudy_white"
                android:id="@+id/comments_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/cloudy_white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_time_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/start_time_title" />


                <EditText
                    android:id="@+id/start_time_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:inputType="datetime" />


                <EditText
                    android:id="@+id/start_date_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:inputType="datetime" />

            </LinearLayout>


            <LinearLayout
                android:background="@color/cloudy_white"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/end_time_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/end_time_title" />

                <EditText
                    android:id="@+id/end_time_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:inputType="datetime" />


                <EditText
                    android:id="@+id/end_date_entry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:inputType="date" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
