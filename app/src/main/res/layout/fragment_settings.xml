<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jaz020.clientoneamfam.Settings"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/header_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/amfam3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
         />

        <TextView
            android:gravity="center_horizontal"
            android:hint="@string/version"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/version_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Username: "
                android:id="@+id/username_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Address: "
                android:id="@+id/address_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="username"
                android:id="@+id/username_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="address"
                android:id="@+id/address_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title_layout_2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Phone: "
                android:id="@+id/phone_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Email: "
                android:id="@+id/email_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_layout_2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:hint="phone"
                android:id="@+id/phone_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="email"
                android:id="@+id/email_text_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        />


</LinearLayout>
