<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_interns"
    android:id="@+id/navneet_fragment_root_layout"
    tools:context="com.example.jaz020.clientoneamfam.MeetNavneetFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="4"
                android:padding="0dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:background="#ffffff"
                android:id="@+id/picture"
                android:src="@drawable/navneet"
                android:contentDescription="@string/picture_navneet" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/navneet"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="7dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/job_title"
                    android:textSize="@dimen/text_size_interns" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/amfam_team_paul"
                    android:textSize="@dimen/text_size_interns" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="12dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/linkedin_navneet"
                    android:autoLink="web"
                    android:textSize="@dimen/text_size_interns" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/github_navneet"
                    android:autoLink="web"
                    android:textSize="@dimen/text_size_interns" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/about_navneet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:id="@+id/descriptionText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailNavneetButton"
                android:text="@string/email_navneet"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:contentDescription="@string/expanded_image" />

</FrameLayout>