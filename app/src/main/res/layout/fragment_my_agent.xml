<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:outline="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/base_clouds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.example.jaz020.clientoneamfam.MyAgentFragment">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="30">

        <ImageView
            android:id="@+id/agentImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="9px"
            android:scaleType="centerCrop"
            android:src="@drawable/contact_img" />
        <Space
            android:id="@+id/myAgentSpacing"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/agentEmailingButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/email"
            android:src="@android:drawable/ic_dialog_email" />

        <com.example.jaz020.clientoneamfam.TextOutlineView
            android:id="@+id/agentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/agentEmailingButton"
            android:padding="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            outline:strokeColor="#ffffff"
            outline:strokeJoinStyle="miter"
            outline:strokeWidth="2px" />

    </RelativeLayout>


    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="5"/>
    <LinearLayout
        style="@style/cloud_view"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="10"
        android:weightSum="100">
        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

        <ImageButton
            android:id="@+id/agentDirectionsButton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:background="@null"
            android:src="@android:drawable/ic_menu_mapmode" />

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/AgentAddress1TextView"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="5555 NeedAFiller Road"/>

            <TextView
                android:id="@+id/AgentAddress2TextView"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="Madison, Wisconsin 53562"/>

        </LinearLayout>

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grey_line"
        />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"/>

    <LinearLayout
        style="@style/cloud_view"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="10"
        android:weightSum="100">
        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

        <ImageButton
            android:id="@+id/agentCallButton"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:background="@null"
            android:src="@android:drawable/ic_menu_call" />

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

        <TextView
            android:id="@+id/AgentPhoneTextView"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:gravity="center_vertical"
            android:text="( 555 ) - 555 - 5555" />

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grey_line"
        />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"/>

    <LinearLayout
        style="@style/cloud_view"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:gravity="center_vertical"
            android:text="Hours of Operation :" />

    </LinearLayout>

    <LinearLayout
        style="@style/cloud_view"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="100">

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="20"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:gravity="center_vertical"
            android:text="Mon. - Fri. : 7:00 AM - 4:30 PM" />

    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="15"
        android:weightSum="100">

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="20"/>

        <Button
            android:id="@+id/AgentScheduleButton"
            style="@style/cloud_button"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="60"
            android:padding="20dp"
            android:text="Schedule a Meeting" />

        <Space
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="20"/>
    </LinearLayout>
</LinearLayout>
