<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flayout"
    style="@style/base_clouds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jaz020.clientoneamfam.MeetInternsFragment" >

    <LinearLayout
        android:id="@+id/backgroundLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/internTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            android:background="@color/cloudy_white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/interns_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/internsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/expanded_image_intern_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/expanded_image"
        android:padding="@dimen/padding_interns"
        android:visibility="invisible" />

</FrameLayout>